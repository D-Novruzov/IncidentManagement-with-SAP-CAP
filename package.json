{
  "name": "incident-managment",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap/cds": "^9",
    "@sap/cds-mtxs": "^3",
    "@sap/logging": "^9.0.0",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0.4.1",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "jest": "^29.7.0"
  },
  "scripts": {
    "start": "cds-serve",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "npm test -- --coverage"
  },
  "cds": {
    "features": {
      "in_memory_db": true
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": ":memory:"
        }
      },
      "auth": {
        "kind": "mocked",
        "users": {
          "admin": {
            "password": "admin",
            "roles": [
              "admin"
            ]
          },
          "user": {
            "password": "user",
            "roles": [
              "user"
            ]
          }
        }
      },
      "jobscheduler": {
        "kind": "rest",
        "credentials": {
          "url": "http://localhost:4004",
          "user": "admin",
          "password": "admin"
        },
        "[production]": {
          "kind": "jobscheduler"
        }
      },
      "[production]": {
        "auth": {
          "kind": "xsuaa"
        },
        "jobscheduler": {
          "kind": "jobscheduler"
        },
        "multitenancy": true
      },
      "[with-mtx]": {
        "multitenancy": true
      }
    },
    "profile": "with-mtx-sidecar"
  },
  "private": true
}
