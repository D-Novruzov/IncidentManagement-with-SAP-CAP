{
  "info": {
    "_postman_id": "incident-management-api",
    "name": "Incident Management API",
    "description": "Postman collection for Incident Management CAP service",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Incidents",
      "item": [
        {
          "name": "Get All Incidents",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/odata/v4/incident/Incidents",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "odata",
                "v4",
                "incident",
                "Incidents"
              ]
            },
            "description": "Retrieve all incidents"
          }
        },
        {
          "name": "Get Incident by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/odata/v4/incident/Incidents({{incidentId}})",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "odata",
                "v4",
                "incident",
                "Incidents({{incidentId}})"
              ]
            },
            "description": "Retrieve a specific incident by ID (UUID)"
          }
        },
        {
          "name": "Create Incident",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Incident\",\n  \"description\": \"Description of the incident\",\n  \"status\": \"OPEN\",\n  \"priority\": \"MEDIUM\",\n  \"category_code\": \"TECH\",\n  \"country_code\": \"US\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/odata/v4/incident/Incidents",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "odata",
                "v4",
                "incident",
                "Incidents"
              ]
            },
            "description": "Create a new incident"
          }
        },
        {
          "name": "Update Incident",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Incident Title\",\n  \"status\": \"IN_PROGRESS\",\n  \"priority\": \"HIGH\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/odata/v4/incident/Incidents({{incidentId}})",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "odata",
                "v4",
                "incident",
                "Incidents({{incidentId}})"
              ]
            },
            "description": "Update an existing incident"
          }
        },
        {
          "name": "Delete Incident",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/odata/v4/incident/Incidents({{incidentId}})",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "odata",
                "v4",
                "incident",
                "Incidents({{incidentId}})"
              ]
            },
            "description": "Delete an incident"
          }
        },
        {
          "name": "Filter Incidents by Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/odata/v4/incident/Incidents?$filter=status eq 'OPEN'",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "odata",
                "v4",
                "incident",
                "Incidents"
              ],
              "query": [
                {
                  "key": "$filter",
                  "value": "status eq 'OPEN'"
                }
              ]
            },
            "description": "Get incidents filtered by status (OPEN, IN_PROGRESS, CLOSED)"
          }
        },
        {
          "name": "Filter Incidents by Priority",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/odata/v4/incident/Incidents?$filter=priority eq 'CRITICAL'",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "odata",
                "v4",
                "incident",
                "Incidents"
              ],
              "query": [
                {
                  "key": "$filter",
                  "value": "priority eq 'CRITICAL'"
                }
              ]
            },
            "description": "Get incidents filtered by priority (LOW, MEDIUM, HIGH, CRITICAL)"
          }
        }
      ]
    },
