    {
      "name": "Actions",
      "item": [
        {
          "name": "Close Incident",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"incidentId\": \"{{incidentId}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/odata/v4/incident/closeIncident",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "odata",
                "v4",
                "incident",
                "closeIncident"
              ]
            },
            "description": "Close an incident by setting its status to CLOSED. Parameter: incidentId (String)"
          }
        },
        {
          "name": "Assign Incident",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"incidentID\": \"{{incidentId}}\",\n  \"userId\": \"{{userId}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/odata/v4/incident/assignIncident",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "odata",
                "v4",
                "incident",
                "assignIncident"
              ]
            },
            "description": "Assign an incident to a user. Parameters: incidentID (UUID), userId (String)"
          }
        }
      ]
    },
    {
      "name": "Functions",
      "item": [
        {
          "name": "Get Incident Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/odata/v4/incident/incidentStats()",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "odata",
                "v4",
                "incident",
                "incidentStats()"
              ]
            },
            "description": "Get statistics about incidents (totalIncidents, openIncidents, closedIncidents)"
          }
        }
      ]
    }
